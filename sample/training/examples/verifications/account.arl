archetype account(owner : address)

variable total       : int     = 0
variable lastSubDate : date    = 1970-01-01

entry add(value : nat) { total += value }

entry sub () {
  called by owner
  require { r1 : now - lastSubDate > 5m
            otherwise "Wait 5 minutes before you decrement again" }
  effect {
     total -= 1;
     lastSubDate := now;
  }
}
